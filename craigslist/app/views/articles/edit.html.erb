<h1>Edit your article</h1>


<%= form_for @article, url: {action: "update"}, method: "PUT" do |f| %>
<p><%= f.text_field :title,  value: @article.title %></p>
<p><%= f.text_area :description, size: "60x12", value: @article.description %></p>
<p><%= f.text_field :price , value: @article.price %></p>
<p><%= f.text_field :email , value: @article.email %></p>
<p><%= f.select :category_id, options_for_select(@category_options) %></p>
  <%= f.submit "Edit Article" %>
<% end %>

<%=link_to 'Delete Article', article_path, :method => :delete%>
